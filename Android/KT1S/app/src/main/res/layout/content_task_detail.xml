<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.projectth.mobile.kt1s.TaskDetailActivity"
    tools:showIn="@layout/activity_task_detail">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:id="@+id/status_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/status_new_job"
            >

            <TextView
                android:layout_margin="5dp"
                android:visibility="visible"
                android:id="@+id/txvStatusJob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="งานใหม่" />

            <TextView
                android:layout_margin="5dp"
                android:visibility="visible"
                android:id="@+id/txvTimeAcceptCase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:text="เวลารับแจ้ง: " />
        </LinearLayout>



        <TextView
            android:id="@+id/txvCaseCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="รหัส: KT000001 เลขเคลม: XXXXXXXXXXXX"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView

            android:layout_margin="5dp"
            android:visibility="visible"
            android:id="@+id/txvPName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="บ. ประกัน : วิริยะประกันภัย" />
        <TextView
            android:layout_margin="5dp"
            android:visibility="visible"
            android:id="@+id/txvCarBrand_plate_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="ยี่ห้อ/ทะเบียน:" />
        <TextView
            android:layout_margin="5dp"
            android:visibility="visible"
            android:id="@+id/txvAccidentPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="ที่เกิดเหตุ: Place address" />


        <Button
            android:id="@+id/btnTelToP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="โทรหา ป." />

        <Button
            android:visibility="gone"
            android:id="@+id/btnCheckIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="มาถึงสถานที่" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
