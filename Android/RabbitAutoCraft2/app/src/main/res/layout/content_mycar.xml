<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.projectth.mobile.rabbitauto.MyCarActivity"
    tools:showIn="@layout/activity_mycar">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/top_banner_text"
        android:id="@+id/imageView5" />

    <ImageView
        android:layout_below="@+id/imageView5"
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/head_line" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:textColor="@color/white"
        android:text="&lt; Back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp" />


    <ListView
        android:layout_below="@+id/imageView6"
        android:id="@+id/listItem"
        tools:listitem="@layout/list_caritem2"
        android:paddingBottom="42dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp"
        android:textSize="17sp"
        android:layout_marginStart="21dp"
        android:text="My Car" />


    <Button
        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp"
android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:id="@+id/btnAddCar"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/blue_button"
        android:text="+ Add car" />
</RelativeLayout>
