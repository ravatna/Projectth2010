<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.projectth.mobile.rabbitauto.ProductDetailActivity"
    tools:showIn="@layout/activity_product_detail">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/top_banner_text"
        android:id="@+id/imageView5" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPic1"
                android:layout_width="180dp"
                android:layout_height="140dp"

                app:srcCompat="@mipmap/placeholder" />

            <ImageView
                android:layout_marginLeft="2dp"
                android:id="@+id/imgPic2"
                android:layout_width="180dp"
                android:layout_height="140dp"
                app:srcCompat="@mipmap/placeholder" />

            <ImageView
                android:layout_marginLeft="2dp"
                android:id="@+id/imgPic3"
                android:layout_width="180dp"
                android:layout_height="140dp"
                app:srcCompat="@mipmap/placeholder" />

            <ImageView
                android:layout_marginLeft="2dp"
                android:id="@+id/imgPic4"
                android:layout_width="180dp"
                android:layout_height="140dp"
                app:srcCompat="@mipmap/placeholder" />

            <ImageView
                android:layout_marginLeft="2dp"
                android:id="@+id/imgPic5"
                android:layout_width="180dp"
                android:layout_height="140dp"
                app:srcCompat="@mipmap/placeholder" />
        </LinearLayout>
    </HorizontalScrollView>
    <Button
        android:id="@+id/btnMobile"
        android:background="@color/brownButton"
        android:textColor="@color/whiteText"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALL US: 089-425-2222"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@mipmap/head_line"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/txtMoreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="more info..."
        android:textColor="@color/colorPrimary"
        android:layout_marginEnd="6dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txt_more_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="32dp"
        android:text="TECHNICAL DATA" />


    <TextView
        android:id="@+id/txt_desciption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text=""
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtMoreInfo"  />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:textColor="@color/white"
        android:text="&lt; Back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp" />

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@mipmap/tan_button"
        android:textColor="@color/white"
        android:text="DOWNLOAD BROCHURE"
        android:layout_above="@+id/btnMobile"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/btnFb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btnMobile"
        android:layout_alignParentStart="true"
        android:background="@mipmap/fb_icon"
        android:visibility="invisible" />
</RelativeLayout>
