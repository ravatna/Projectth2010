<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.projectth.mobile.rabbitauto.ContactUsActivity"
    tools:showIn="@layout/activity_contact_us">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bg_line"
        android:layout_alignTop="@+id/bg_line"
        android:layout_marginStart="24dp"
        android:textColor="@color/orangeText"
        android:text="บริษัท แรบบิตอออโต้คราฟ จำกัด" />

    <ImageView

        android:id="@+id/topBanner"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/top_banner" />

    <ImageView
        android:id="@+id/bg_line"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:scaleType="fitStart"
        app:srcCompat="@mipmap/head_line"
        android:layout_marginTop="10dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/topBanner"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/img_map"
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/map_medium"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="120dp"
        android:layout_height="40dp"

        android:text="@string/btn_back"
        android:background="@mipmap/orange_button"
        android:textColor="@color/whiteText"
        app:srcCompat="@mipmap/orange_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2741/9 ถนนลาดพร้าว แขวงคลองเจ้าคุณสิงห์ \nเขตวังทองหลาง กรุงเทพมหานคร 10310\n\nTel. 093-8302222, 0813574590\nFax. 02-932-2268"

        android:layout_below="@+id/bg_line"
        android:layout_alignStart="@+id/bg_line" />

</RelativeLayout>
