<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCar"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/placeholder" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="4dp"
                android:text="title"

                android:textColor="@color/darkGray"

                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_license_plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="4dp"
                android:text="LC Plate: "
                android:textColor="@color/darkGray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="4dp"
                android:text="license: "

                android:textColor="@color/lightgreen"

                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="4dp"
                android:text="Insureance: "
                android:textColor="@color/lightblue"
                android:textSize="13sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCarInfo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@mipmap/green_button"
            android:text="Car Info"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            />

        <Button
            android:layout_marginLeft="1dp"
            android:layout_marginRight="2dp"

            android:textColor="@color/white"
            android:id="@+id/btnBooking"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@mipmap/blue_button"
            android:text="Booking Service" />
    </LinearLayout>



</LinearLayout>